LOCAL n := 9  // Задаем количество строк треугольника Паскаля
LOCAL a[10, 10]  // Массив для хранения значений треугольника
LOCAL i, j

// Инициализация первой строки треугольника Паскаля
FOR i := 1 TO n
   a[i,1] := 1
   a[i,i] := 1
NEXT

// Вычисляем остальные строки треугольника
FOR i := 3 TO n
   FOR j := 2 TO i - 1
      a[i,j] := a[i-1,j-1] + a[i-1,j]
   NEXT
NEXT

// Вывод треугольника Паскаля
FOR i := 1 TO n
   FOR j := 1 TO i
      ?? a[i,j], " "  // Выводим элемент и пробел
   NEXT
   ?  // Переход на новую строку
e
